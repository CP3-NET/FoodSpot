@model IEnumerable<FoodSpot.Model.RestaurantModel>

@{
    ViewData["Title"] = "Restaurantes";
}

<h1>Restaurantes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Endereço</th>
            <th>Telefone</th>
            <th>Avaliação</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category?.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>⭐ @item.AverageRating.ToString("F1")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Nenhum restaurante cadastrado</td>
            </tr>
        }
    </tbody>
</table>

@model FoodSpot.Model.RestaurantModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes do Restaurante</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Endereço</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Categoria</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">Avaliação Média</dt>
        <dd class="col-sm-10">⭐ @Model.AverageRating.ToString("F1")</dd>

        <dt class="col-sm-2">Nº de Avaliações</dt>
        <dd class="col-sm-10">@Model.ReviewCount</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
</div>
